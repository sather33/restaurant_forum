          <li role="presentation" class="active"><%= link_to category.name, category_path(category) %></li>
        <% else %>
          <li role="presentation" ><%= link_to category.name, category_path(category) %></li>
        <% end %>
      <% end %>
    </ul>
    <%= render partial: "share/restaurant_list" %>
  </div>